{
  "name": "node-starter",
  "version": "1.0.0",
  "main": "build/main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/servexyz/node-starter"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^3.0.0",
    "@babel/core": "7.5.0",
    "@babel/node": "7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "7.5.2",
    "@babel/register": "7.4.4",
    "ava": "^2.2.0",
    "babel-loader": "^8.0.6",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "nodemon": "^1.19.1",
    "nodemon-webpack-plugin": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^1.2.0",
    "source-map-loader": "^0.2.4",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2",
    "webpackbar": "^3.2.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "dotenv": "^8.0.0",
    "uninstall": "0.0.0"
  },
  "scripts": {
    "start": "npm run dev",
    "build": "webpack --mode production --display minimal",
    "clean": "npm run clean:docker",
    "clean:build": "rm -Rf ./build",
    "clean:docker": "docker rm -f $(docker ps -aqf 'name=node-starter')",
    "dev": "npm run dev:liveReloadedModule",
    "dev:vanillaModule": "babel-node src/index.js",
    "dev:liveReloadedModule": "nodemon --watch src/index.js --exec 'babel-node src/index.js'",
    "dev:liveReloadedDocker": "npm-run-all -p docker:compose dev:liveReloadedModule docker:liveReload ",
    "docker:liveReload": "npx docker-live-reload 'src/**/*' node-starter_server_1 /usr/src/server/src",
    "docker:compose": "docker-compose up -d",
    "dev:server": "webpack --mode development --watch --display minimal",
    "test": "npm-run-all -s clean:build build test:liveReloadedAva",
    "test:ava": "ava",
    "test:liveReloadedAva": "ava --watch",
    "publish": "npm run build && npm run publish:np",
    "production": "npm run build && node build/main.js",
    "publish:np": "npx np",
    "ci": "npm run build && npm run ci:local:timed",
    "ci:local": "trevor",
    "ci:local:timed": "npm run ci:local | gnomon --type=elapsed-total",
    "ci:local:cache:install": "docker pull verdaccio/verdaccio",
    "ci:local:cache:run": "docker run -it --rm --name verdaccio -p 4873:4873 verdaccio/verdaccio",
    "ci:prepare": "npm install -g trevor gnomon"
  },
  "ava": {
    "files": [
      "!npm-starter-sample-module/**/*.js",
      "tests/**/*"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "verbose": true
  }
}
